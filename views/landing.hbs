<script src="https://cdn.jsdelivr.net/npm/typeit@6.1.1/dist/typeit.min.js"></script>
<style>
    @import url('https://fonts.googleapis.com/css?family=Lato:400,700|Montserrat:900');
    $font: 'Lato',
    sans-serif;
    $big: 'Montserrat',
    sans-serif;

    body {
        display: grid;
        background: $dark;
    }

    h1 {
        font-family: $font;
        text-align: center;
        margin-top: 2em;
        font-size: 1em;
        text-transform: uppercase;
        letter-spacing: 5px;
        color: $white;
    }

</style>


<div class="container-fluid d-flex justify-content-center">
    <div style="font-size: 5rem;">
        <div class="row">
            <div class="col-md-12">
                 <h1 id="type"></h1>
            </div>
        </div>
        <div class="row mt-5">
            <div id="startBtn" class="col-md-2 mx-auto d-none">
                <a href="/userReg" class="btn btn-outline-black btn-block">Sign Up</a>
            </div>
        </div>
    </div>
</div>

<script>

     let instance = new TypeIt("#type", {
            speed: 150,
            nextStringDelay:750,
            afterComplete: async function(step, instance){
                $('#startBtn').removeClass('d-none');
            }
        })
        .type("Review Your Class")
        .pause(1000)
        .delete()
        .type("2,399")
        .break()
        .type("Classes Added")
        .pause(1000)
        .delete()
        .type("10,000 ")
        .break()
        .type("Reviews Posted")
        .pause(1000)
        .delete()
        .type("4,379")
        .break()
        .type("Students Joined")
        .pause(1000)
        .delete()
        .type("Join the community.")
        .go();
    

</script>