<script src="/plugins/rating/jquery.star-rating-svg.js"></script>
<link rel="stylesheet" type="text/css" href="/plugins/rating/css/star-rating-svg.css">
<div class="container-fluid">
    <div class="d-flex justify-content-center pt-5">
        <a class="h3"> Add Review </h1>
        <hr>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-5 mt-3">
            <form>
                <div class="form-group">
                    <p class="form-text dark-grey-text">
                        <span class="h3">1. </span>
                        <span class="h5">Course Information</span>
                    </p>
                    <div class="form-row">
                        <div class="col p-3 ml-3">
                            <div class="md-form mt-3">
                                <input type="text" class="form-control" placeholder="Course Code">
                            </div>
                        </div>
                        <div class="col p-3 ml-3">
                            <div class="md-form mt-3">
                                <input type="text" class="form-control" placeholder="Professor">
                            </div>
                        </div>
                    </div>
                    <p class="form-text dark-grey-text mb-3">
                        <span class="h3">2. </span>
                        <span class="h5">Rating</span>
                    </p>
                    <div class="form-row mb-3">
                        <div class="col p-3 ml-3">
                            <p class="h6">Course Quality <i class="rating-1"></i></p>
                        </div>
                        <div class="col p-3 ml-3">
                            <p class="h6">Course Difficulty <i class="rating-2"></i></p>
                        </div>
                    </div>
                    <p class="form-text dark-grey-text mb-3">
                        <span class="h3">3. </span>
                        <span class="h5">Grading</span>
                    </p>
                    <div class="w-75 mb-3 p-3 ml-3 range-field">
                        <input type="range" min="0" max="5" step="1">
                    </div>
                    <p class="form-text dark-grey-text mb-3">
                        <span class="h3">4. </span>
                        <span class="h5">Review</span>
                    </p>
                    <div class="form-group shadow-textarea mb-3 p-3 ml-3">
                        <textarea class="form-control z-depth-1" id="exampleFormControlTextarea6" rows="3"
                            placeholder="Write your reviews here."></textarea>
                        <label for="exampleFormControlTextarea6"></label>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Material Select Initialization
    $(document).ready(function () {
        $('.mdb-select').materialSelect();
    });
    $(".rating-1").starRating({
        useFullStars: true,
        starShape: 'rounded',
        starSize: 20    
    });
    $(".rating-2").starRating({
        useFullStars: true,
        starShape: 'rounded',
        starSize: 20
    });


</script>