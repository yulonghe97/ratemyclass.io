<link rel="stylesheet" type="text/css" href="/js/overhang/overhang.min.css" />
<script type="text/javascript" src="/js/overhang/overhang.min.js"></script>
<!--LOGIN-->
<div class="container mt-5">
    <div id="error" class="d-none" role="alert">
        <a id="errorMsg">{{Error}}</a>
    </div>
    <div class="row mb-5"></div>
    <div class="row d-flex justify-content-center">
        <!--USER LOGIN-->
        <div class="col-md-5">
            <section class="form-simple">
                <!--Form with header-->
                <div class="card rounded z-depth-0 border border-light animated fadeIn">
                    <!--Header-->
                    <div class="header pt-3">
                        <div class="row d-flex justify-content-center rounded">
                            <h5 class="dark-green-text mt-2 mb-2 mx-5"><strong>SIGN IN&nbsp&nbsp</strong></h5>
                        </div>
                    </div>
                    <!--Header-->
                    <div class="card-body mx-4 mt-4 ">
                        <form method="post" action="/userLogin">
                        <!--Body-->
                        <div class="md-form">
                            <input name="username" type="text" id="Form-email4" class="form-control">
                            <label for="Form-email4">Username</label>
                        </div>
                        <div class="md-form pb-3">
                            <input name="password" type="password" id="Form-pass4" class="form-control">
                            <label for="Form-pass4">Password</label>
                            <p class="font-small grey-text d-flex justify-content-end">Forgot <a href="#" class="dark-grey-text font-weight-bold ml-1"> Password?</a></p>
                        </div>
                        <div class="text-center mb-4">
                            <button type="submit" class="btn btn-outline-grey rounded z">Log in</button>
                        </div>
                        <p class="font-small grey-text d-flex justify-content-center">Don't have an account?
                            <a href="/userReg" class="text-primary font-weight-bold ml-1"> Sign up</a></p>
                        </form>
                    </div>
                </div>
                <!--/Form with header-->
            </section>
        </div>
        <div class="col-md-7 my-auto animated fadeIn">
            <img class=" img-fluid" src="/img/illustration/3081629.jpg" alt="">
        </div>
    </div>
</div>

<script>

    function flashError(){
        if($('#errorMsg').text() === ''){
            $('#error').addClass('d-none');
        }else{
             $("body").overhang({
                            type: "error",
                            message: $('#errorMsg').text(),
                            duration: 2
                        });
        }
    }

    $(document).ready(function () {
        flashError();
    });
</script>
